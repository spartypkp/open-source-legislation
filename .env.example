# Open Source Legislation - Environment Configuration Example
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Database Settings
# Each jurisdiction uses its own table (e.g., us_az_statutes, us_ca_statutes)
# Multiple Claude Code instances can share the same database safely
OSL_DB_USER=your_postgres_username
OSL_DB_PASSWORD=your_postgres_password
OSL_DB_HOST=localhost
OSL_DB_PORT=5432
OSL_DB_NAME=legislation

# ============================================================================
# API KEYS (Optional - for AI features)
# ============================================================================

# OpenAI API Key (for embeddings and AI features)
OSL_OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (if using Claude for processing)
OSL_ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ============================================================================
# SCRAPER CONFIGURATION (Optional - for advanced users)
# ============================================================================

# Default delay between requests (in seconds)
OSL_DEFAULT_DELAY=1.5

# Maximum retry attempts for failed requests
OSL_MAX_RETRIES=3

# Request timeout (in seconds)
OSL_REQUEST_TIMEOUT=30

# Debug mode (true/false) - enables verbose logging
OSL_DEBUG_MODE=true

# ============================================================================
# SECURITY SETTINGS (Optional)
# ============================================================================

# User-Agent string for web requests
OSL_USER_AGENT="Mozilla/5.0 (compatible; OpenSourceLegislation/1.0)"

# Rate limiting (requests per minute)
OSL_RATE_LIMIT=60

# ============================================================================
# PARALLEL PROCESSING (Optional)
# ============================================================================

# Maximum number of concurrent scraper instances
OSL_MAX_WORKERS=4

# Batch size for database operations
OSL_BATCH_SIZE=100

# ============================================================================
# LOGGING CONFIGURATION (Optional)
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
OSL_LOG_LEVEL=INFO

# Log file path (leave empty to log to console only)
OSL_LOG_FILE=

# ============================================================================
# JURISDICTION-SPECIFIC OVERRIDES (Optional)
# ============================================================================

# Arizona-specific settings
OSL_AZ_DELAY=1.0
OSL_AZ_MAX_RETRIES=3

# California-specific settings  
OSL_CA_DELAY=2.0
OSL_CA_MAX_RETRIES=5

# Federal eCFR settings
OSL_FEDERAL_DELAY=2.5
OSL_FEDERAL_MAX_RETRIES=5

# ============================================================================
# DEVELOPMENT/TESTING SETTINGS (Optional)
# ============================================================================

# Test database name (for isolated testing)
OSL_TEST_DB_NAME=test_legislation

# Skip title count for testing (start from title N)
OSL_SKIP_TITLES=0

# Limit processing to N titles for testing
OSL_LIMIT_TITLES=

# Enable dry run mode (parse but don't insert to database)
OSL_DRY_RUN=false

# ============================================================================
# BACKUP AND MONITORING (Optional)
# ============================================================================

# Backup directory for original scrapers
OSL_BACKUP_DIR=./backups

# Enable performance monitoring
OSL_ENABLE_MONITORING=true

# Webhook URL for completion notifications
OSL_WEBHOOK_URL=

# ============================================================================
# EXAMPLE VALUES FOR QUICK SETUP
# ============================================================================

# Uncomment and modify these for a quick local setup:
# OSL_DB_USER=postgres
# OSL_DB_PASSWORD=your_password_here
# OSL_DB_HOST=localhost
# OSL_DB_PORT=5432
# OSL_DB_NAME=legislation
# OSL_DEBUG_MODE=true
# OSL_LOG_LEVEL=INFO